<PageTitle>@Title</PageTitle>

<div class="card border border-5 border-dark w-100 mb-3 rounded-4">
	<div class="card-header fs-1 font-monospace fw-bolder text-center">
		@Title
	</div>

	@if (PageType != Enums.PageType.Exception && PageType != Enums.PageType.Home && PageType != Enums.PageType.NotFound)
	{
		<div class="card-footer">
			@switch (PageType)
			{
				case PageType.Account:
					break;
				default:
					break;
			}
		</div>
	}
</div>